@model CadEmprestimoViewModel
@{
    ViewData["Title"] = "Cadastro de Emprestimos";
}

<h1 class="row justify-content-md-center">Cadastro de Notas</h1>
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <fieldset>
            <legend>Usuario</legend>
            <div class="form-group">
                <label asp-for="Emprestimo.NomeUsuario">Nome do aluno</label>
                <input asp-for="Emprestimo.NomeUsuario" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="Emprestimo.Telefone">Registro escolar</label>
                <input asp-for="Emprestimo.Telefone" class="form-control" required/>
            </div>
        </fieldset>
        <fieldset>
            <legend>Livro</legend>
            <div class="form-group">
                <label asp-for="Emprestimo.DataEmprestimo">Data da avaliação</label>
                <input type="date" asp-for="Emprestimo.DataEmprestimo" class="form-control" required/>
            </div>
            
            <div class="form-group">
                <label asp-for="Emprestimo.DataDevolucao">Nota</label>
                <input  asp-for="Emprestimo.DataDevolucao" class="form-control" required/>
            </div>
        
            <div class="form-group" >
                <label asp-for="Emprestimo.LivroId" >Matéria</label>
                <select asp-for="Emprestimo.LivroId" class="form-control" >
                    @foreach(Livro l in Model.Livros)
                    {
                        <option value="@l.Id" >@l.Titulo</option>
                    }
                </select>
            </div>
        </fieldset>
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>
</div>